<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Track the upstream MEL release -->
  <include name="mel_2014.12_async_1.xml"/>

  <!-- Add the QA private repository.  This is not AMD specific but we are -->
  <!-- one of the projects that use it. -->
  <project name="meta-mentor-qa-private.git" path="meta-mentor-qa-private"/>

  <!-- Add the AMD specific repositories -->
  <project name="meta-amd.git" path="meta-amd"/>
  <remote fetch="ssh://amdyocto@ndasource.amd.com" name="amd-private"/>
  <project name="meta-amd-private.git" path="meta-amd-private" revision="mentor/master" remote="amd-private"/>

  <!-- Update to AMD specific branches for repos which are currently locked down -->
  <!-- Note that any changes on these branches will need to be merged back into -->
  <!-- the appropriate branch (likely whatever is used for async2/birch) when -->
  <!-- they are open for checkin and this can then be removed -->
  <remove-project name="mel-manufacturing.git" />
  <remove-project name="mel-docs.git" />
  <project name="mel-manufacturing.git" path="manufacturing" revision="release/2014.12-amd-mfbeta" />
  <project name="mel-docs.git" path="docs" revision="release/2014.12-amd-mfbeta" />
</manifest>
