<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- Derive from the MEL_updates2 configuration as a base -->
  <include name="cedar/mel_updates2_frozen.xml"/>

  <!-- Unlock meta-mentor, scripts and manufacturing for cedar async development -->
  <remove-project name="meta-mentor.git"/>
  <remove-project name="mel-scripts.git"/>
  <remove-project name="mel-manufacturing.git"/>
  <project name="meta-mentor.git" path="meta-mentor" revision="cedar"/>
  <project name="mel-scripts.git" path="scripts" revision="cedar"/>
  <project name="mel-manufacturing.git" path="manufacturing" revision="cedar"/>

  <!-- Unlock poky cedar branch for Async -->
  <remove-project name="poky.git"/>
  <project name="poky.git" path="poky" revision="cedar"/>

  <!-- Update meta-intel to jethro stable for MinnowMAX -->
  <remove-project name="meta-intel.git"/>
  <project name="meta-intel.git" path="meta-intel" remote="yocto" revision="4e87c59bdedaa8c3e44fc02fd23be726c4d1dfb9" upstream="jethro"/>

  <!-- meta-altera layer for Altera Cyclone 5 support -->
  <project name="kraj/meta-altera.git" path="meta-altera" remote="github" revision="d232376fa7b0bf3f22d57c6c747983d00c67e34d" upstream="master"/>

  <!-- update mx6q memf support -->
  <remove-project name="mel-meta-mentor-mx6q-memf.git"/>
  <project name="mel-meta-mentor-mx6q-memf.git" path="meta-mentor-mx6q-memf" revision="cedar" upstream="cedar"/>

  <!-- meta-mentor-ti-processor-sdk layer for am57xx -->
  <project name="meta-mentor-ti-processor-sdk.git" path="meta-mentor-ti-processor-sdk" revision="cedar" upstream="cedar"/>

</manifest>
