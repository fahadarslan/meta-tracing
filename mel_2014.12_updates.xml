<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- This manifest defines the configuration for the MEL 2014.12 update builds. -->
  <!-- As such, it inherits the MEL frozen configuration/manifest, but will -->
  <!-- pull updates to only the mel-updates and mel-scripts repositories -->

  <!-- Derive from the MEL 2014.12 release configuration as a base -->
  <include name="mel_2014.12_frozen.xml" />

  <!-- The update builds _must_ not change any layers except updates and scripts -->
  <remove-project name="mel-scripts.git" />

  <project name="mel-scripts.git" path="scripts" revision="release/2014.12" />
  <project name="mel-updates.git" path="updates" revision="release/2014.12" />

</manifest>
